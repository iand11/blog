<h1 style="width:7em; margin:auto; text-align: center">New Post</h1>

<div style="width:15em; margin:auto; text-align: center">
<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title  %>
  </p>
  <p>
    <%= f.label :body %>  <br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end  %>

</div>