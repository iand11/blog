<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div style="float:right">
    <ul>
      <% @post.errors.full_messages do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title  %>
  </p>
  <p>
    <%= f.label :body %>  <br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end  %>